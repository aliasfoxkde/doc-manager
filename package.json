{
  "name": "doc-manager",
  "version": "1.0.0",
  "description": "Document Management PWA with local editing, cloud sync, and multi-platform support",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run validate-safety && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "validate-safety": "node scripts/validate-safety.cjs",
    "validate-safety:strict": "node scripts/validate-safety.cjs --strict",
    "pre-commit": "npm run validate-safety && npm run type-check"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^41.4.2",
    "@ckeditor/ckeditor5-react": "^11.0.1",
    "@monaco-editor/react": "^4.6.0",
    "@tiptap/extension-color": "^3.16.0",
    "@tiptap/extension-image": "^3.16.0",
    "@tiptap/extension-link": "^3.16.0",
    "@tiptap/extension-text-style": "^3.16.0",
    "@tiptap/react": "^3.16.0",
    "@tiptap/starter-kit": "^3.16.0",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^5.0.0",
    "cors": "^2.8.6",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "idb": "^8.0.0",
    "marked": "^17.0.1",
    "monaco-editor": "^0.52.0",
    "nanoid": "^5.0.8",
    "onnxruntime-web": "^1.23.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.28.0",
    "remark-gfm": "^4.0.1",
    "tesseract.js": "^7.0.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "^25.0.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "glob": "^11.0.0",
    "prettier": "^3.4.2",
    "puppeteer": "^24.36.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.3",
    "vite-plugin-pwa": "^0.21.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
